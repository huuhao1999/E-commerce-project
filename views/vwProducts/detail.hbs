            </div>
                        </div>
                      {{else}}
                        <form action="/account/login" method="get">
                          <div class="row mt-3 mb-4">
                            <div class="col-md-12 text-center text-md-left text-md-right d-flex justify-content-center">
                              <button type="submit" class="btn btn-danger btn-rounded">
                                <i class="fas mr-2 pr-2" aria-hidden="true"></i>Mua ngay</button>
                            </div>
                          </div>
                        </form>
                      {{/if}}
                    </div>
                  </div>
                </div>
              {{/each}}
            </section>
            <!--Section: Content-->
          </div>
          <div class="row py-2">
            <div class="col-md-5 pl-5 pr-5">
